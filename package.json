{
    "name": "mvp",
    "productName": "Multimedia Visualization Platform",
    "version": "0.1.0",
    "description": "Create your own streaming service, offline.",
    "main": "src/main/main.js",
    "scripts": {
        "start": "electron .",
        "nm": "nodemon --exec electron .",
        "build-all": "electron-builder -mwl",
        "build-win": "electron-builder --win nsis:ia32",
        "build-linux": "electron-builder --linux deb tar.xz",
        "build-mac": "electron-builder --mac",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "build": {
        "directories": {
            "buildResources": "./assets"
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/TMD44/mvp.git"
    },
    "keywords": [],
