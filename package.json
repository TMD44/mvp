    "bugs": {
        "url": "https://github.com/TMD44/mvp/issues"
    },
    "homepage": "https://github.com/TMD44/mvp#readme",
    "devDependencies": {
        "electron": "^11.3.0",
        "electron-builder": "^22.10.5",
        "nodemon": "^2.0.7",
        "typescript": "^4.2.3"
    },
    "dependencies": {
        "bootstrap": "^4.6.0",
        "electron-log": "^4.3.2",
        "electron-updater": "^4.3.8",
        "electron-window-state": "^5.0.3",
        "node-themoviedb": "^0.2.7"
